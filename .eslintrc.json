{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:unicorn/recommended"
  ],
  "rules": {
    "no-console": "off",
    "no-undef": "warn",
    "unicorn/no-process-exit": "off"
  },
  "overrides": [
    {
      "files": ["server.js", "src/**", "scripts/**", "*.js"],
      "env": { "node": true, "browser": false },
      "rules": {
        "no-undef": "error"
      }
    },
    {
      "files": ["public/**", "src/**/*.client.js", "src/**/ui/**", "tests/**", "test-*.js", "test-*.js"],
      "env": { "browser": true, "node": false },
      "rules": {
        "no-undef": "warn"
      }
    }
  ]
}
